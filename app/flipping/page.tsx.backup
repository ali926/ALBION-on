"use client";

import { useState } from 'react';
import Card from '../../components/Card';
import FilterPanel from '../../components/FilterPanel';
import UpgradeMaterialsPanel from '../../components/UpgradeMaterialsPanel';
import itemsData from '../../lib/data/items.json';
import { fetchBlackMarketFlips, getOrderAge } from '../../lib/market';
import { calculateFlipProfit } from '../../lib/flip-calculator';
import { getUpgradeRequirements, calculateUpgradeCost } from '../../lib/upgrade-materials';
import { FlipOpportunity, FlipFilters, City } from '../../lib/types';

interface MaterialPrices {
    [tier: number]: {
        rune: number;
        soul: number;
        relic: number;
    };
}

// Default filter values
const DEFAULT_FILTERS: FlipFilters = {
    buyLocations: [City.CAERLEON],
    sellLocations: [City.BLACK_MARKET],
    tiers: [6, 7, 8],
    enchantments: [0, 1, 2, 3, 4],
    qualities: [1],
    categories: [],
    minProfit: 50000,
    minMargin: 10,
    maxInvestment: 999999999,
    maxBuyAge: 60,
    maxSellAge: 30,
    showUpgrades: false,
    upgradeFrom: [0],
    upgradeTo: [1, 2, 3, 4],
    maxRuneCount: 999,
    hideMissingMats: false,
    hideConsumed: true,
    hideDuplicates: true,
    minQuantity: 1
};

export default function FlippingPage() {
    const [isPremium, setIsPremium] = useState(true);
    const [loading, setLoading] = useState(false);
    const [filters, setFilters] = useState<FlipFilters>(DEFAULT_FILTERS);
    const [materialPrices, setMaterialPrices] = useState<MaterialPrices>({
        4: { rune: 0, soul: 0, relic: 0 },
        5: { rune: 0, soul: 0, relic: 0 },
        6: { rune: 0, soul: 0, relic: 0 },
        7: { rune: 0, soul: 0, relic: 0 },
        8: { rune: 0, soul: 0, relic: 0 }
    });
    const [results, setResults] = useState<FlipOpportunity[]>([]);
    const [sortBy, setSortBy] = useState<'profit' | 'margin' | 'roi'>('profit');
    const [error, setError] = useState<string | null>(null);

    const handleScanFlips = async () => {
        setLoading(true);
        setError(null);
        try {
            // Get all items matching tier and enchantment filters
            const matchingItems = itemsData.filter((item: any) => {
                flipData.forEach((flips, itemId) => {
                    const item = itemsData.find((i: any) => i.id === itemId);
                    if (!item) return;

                    flips.forEach(flip => {
                        // Check order age filters
                        if (flip.buyAge > filters.maxBuyAge || flip.sellAge > filters.maxSellAge) return;

                        // Check quantity filter
                        if (flip.quantity < filters.minQuantity) return;

                        // Calculate profit
                        const calculation = calculateFlipProfit({
                            buyPrice: flip.buyPrice,
                            sellPrice: flip.sellPrice,
                            quantity: flip.quantity,
                            isPremium
                        });

                        // Check profit filters
                        if (calculation.totalProfit < filters.minProfit) return;
                        if (calculation.profitMargin < filters.minMargin) return;
                        if (calculation.totalCost > filters.maxInvestment) return;

                        opportunities.push({
                            itemId,
                            itemName: item.name,
                            tier: item.tier,
                            enchantment: item.enchantment || 0,
                            quality: 1,
                            buyLocation: flip.buyCity,
                            buyPrice: flip.buyPrice,
                            buyQuantity: flip.quantity,
                            buyOrderAge: flip.buyAge,
                            sellLocation: 'Black Market',
                            sellPrice: flip.sellPrice,
                            sellQuantity: flip.quantity,
                            sellOrderAge: flip.sellAge,
                            isUpgrade: false,
                            profitPerItem: calculation.profitPerItem,
                            totalProfit: calculation.totalProfit,
                            profitMargin: calculation.profitMargin,
                            roi: calculation.roi,
                            totalCost: calculation.totalCost,
                            netSellPrice: calculation.netRevenue / flip.quantity
                        });
                    });
                });

                // Sort results
                opportunities.sort((a, b) => {
                    if (age <= 30) return 'üü°';
                    return 'üî¥';
                };

                const stats = {
                    totalFlips: results.length,
                    totalProfit: results.reduce((sum, r) => sum + r.totalProfit, 0),
                    avgProfit: results.length > 0 ? results.reduce((sum, r) => sum + r.totalProfit, 0) / results.length : 0,
                    bestFlip: results.length > 0 ? results[0] : null
                };

                return (
                    <div className="max-w-7xl mx-auto slide-in pb-12">
                        <div className="mb-8">
                            <h1 className="text-4xl font-bold mb-2 text-gold">üí∞ Black Market Flipping</h1>
                            <p className="text-gray-400">Find instant flip opportunities from cities to Black Market</p>
                        </div>

                        <div className="grid grid-cols-1 lg:grid-cols-4 gap-6">
                            {/* Left Sidebar: Filters */}
                            <div className="lg:col-span-1 space-y-6">
                                <Card>
                                    <div className="flex items-center justify-between mb-4">
                                        <h2 className="text-lg font-bold text-gray-100">Filters</h2>
                                        <span className="text-xs text-gray-500">{results.length} flips</span>
                                    </div>
                                    <FilterPanel filters={filters} onChange={setFilters} />
                                </Card>

                                {filters.showUpgrades && (
                                    <Card>
                                        <h2 className="text-lg font-bold text-gray-100 mb-4">Upgrade Materials</h2>
                                        <UpgradeMaterialsPanel prices={materialPrices} onChange={setMaterialPrices} />
                                    </Card>
                                )}

                                <Card>
                                    <div className="space-y-3">
                                        <div className="flex items-center justify-between bg-gray-800/50 p-3 rounded-lg">
                                            <span className="text-sm font-medium text-gray-300">Premium Status</span>
                                            <div
                                                className={`w-12 h-6 rounded-full p-1 cursor-pointer transition-colors ${isPremium ? 'bg-yellow-600' : 'bg-gray-600'}`}
                                                onClick={() => setIsPremium(!isPremium)}
                                            >
                                                <div className={`w-4 h-4 bg-white rounded-full shadow-md transform transition-transform ${isPremium ? 'translate-x-6' : ''}`} />
                                            </div>
                                        </div>
                                        <button
                                            onClick={handleScanFlips}
                                            disabled={loading}
                                            className="btn-primary w-full"
                                        >
                                            {loading ? (
                                                <span className="flex items-center justify-center">
                                                    <span className="loading-spinner mr-2"></span>
                                                    Scanning Market...
                                                </span>
                                            ) : (
                                                'üîç Scan for Flips'
                                            )}
                                    </div>
                                </Card>
                                <Card className="bg-green-900/20 border-green-700/50">
                                    <div className="text-center">
                                        <div className="text-2xl font-bold text-green-400">{stats.totalProfit.toLocaleString()} ü™ô</div>
                                        <div className="text-xs text-gray-400 mt-1">Total Potential</div>
                                    </div>
                                </Card>
                                <Card className="bg-purple-900/20 border-purple-700/50">
                                    <div className="text-center">
                                        <div className="text-2xl font-bold text-purple-400">{stats.avgProfit.toLocaleString()} ü™ô</div>
                                        <div className="text-xs text-gray-400 mt-1">Avg Profit</div>
                                    </div>
                                </Card>
                                <Card className="bg-yellow-900/20 border-yellow-700/50">
                                    <div className="text-center">
                                        <div className="text-2xl font-bold text-yellow-400">{stats.bestFlip?.profitMargin.toFixed(1)}%</div>
                                        <div className="text-xs text-gray-400 mt-1">Best Margin</div>
                                    </div>
                                </Card>
                            </div>
                                )}

                            {/* Results Table */}
                            <Card>
                                <div className="flex items-center justify-between mb-4">
                                    <h2 className="text-xl font-bold text-gray-100">Flip Opportunities</h2>
                                    {results.length > 0 && (
                                        <div className="flex items-center space-x-2">
                                            <span className="text-xs text-gray-500">Sort by:</span>
                                            <select
                                                value={sortBy}
                                                onChange={(e) => {
                                                    setSortBy(e.target.value as any);
                                                    const sorted = [...results].sort((a, b) => {
                                                        if (e.target.value === 'profit') return b.totalProfit - a.totalProfit;
                                                        if (e.target.value === 'margin') return b.profitMargin - a.profitMargin;
                                                        return b.roi - a.roi;
                                                    });
                                                    setResults(sorted);
                                                }}
                                                className="text-xs bg-gray-800 border border-gray-700 text-white rounded px-2 py-1"
                                            >
                                                <option value="profit">Total Profit</option>
                                                <option value="margin">Margin %</option>
                                                <option value="roi">ROI %</option>
                                            </select>
                                        </div>
                                    )}
                                </div>

                                {results.length > 0 ? (
                                    <div className="overflow-x-auto">
                                        <table className="data-table">
                                            <thead>
                                                <tr>
                                                    <th>Item</th>
                                                    <th>Buy From</th>
                                                    <th>Buy Price</th>
                                                    <th>Sell Price</th>
                                                    <th>Qty</th>
                                                    <th>Total Cost</th>
                                                    <th>Net Profit</th>
                                                    <th>Margin %</th>
                                                    <th>Age</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {results.map((result, idx) => (
                                                    <tr key={idx}>
                                                        <td className="font-medium">
                                                            <div>
                                                                {result.itemName}
                                                                {result.enchantment > 0 && (
                                                                    <span className="ml-1 text-purple-400">.{result.enchantment}</span>
                                                                )}
                                                            </div>
                                                            <div className="text-xs text-gray-500">T{result.tier}</div>
                                                        </td>
                                                        <td className="text-blue-400">{result.buyLocation}</td>
                                                        <td>{result.buyPrice.toLocaleString()} ü™ô</td>
                                                        <td className="text-green-400">{result.sellPrice.toLocaleString()} ü™ô</td>
                                                        <td>{result.buyQuantity}</td>
                                                        <td>{result.totalCost.toLocaleString()} ü™ô</td>
                                                        <td className="text-green-400 font-semibold">
                                                            +{result.totalProfit.toLocaleString()} ü™ô
                                                        </td>
                                                        <td className="text-green-400 font-semibold">
                                                            +{result.profitMargin.toFixed(1)}%
                                                        </td>
                                                        <td className="text-center">
                                                            <div className="flex items-center space-x-1 text-xs">
                                                                <span title={`Buy: ${result.buyOrderAge}m`}>
                                                                    {getAgeIndicator(result.buyOrderAge)}
                                                                </span>
                                                                <span title={`Sell: ${result.sellOrderAge}m`}>
                                                                    {getAgeIndicator(result.sellOrderAge)}
                                                                </span>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                ))}
                                            </tbody>
                                        </table>
                                    </div>
                                ) : (
                                    <div className="text-center py-12 text-gray-500">
                                        <p className="mb-2">Configure filters and click "Scan for Flips" to find opportunities</p>
                                        <p className="text-xs">Results show instant flips from selected cities to Black Market</p>
                                    </div>
                                )}
                            </Card>

                            {results.length > 0 && (
                                <Card className="bg-blue-900/20 border-blue-700/50">
                                    <h3 className="text-sm font-semibold text-blue-300 mb-2">‚ÑπÔ∏è Flipping Tips</h3>
                                    <ul className="text-xs text-gray-400 space-y-1">
                                        <li>‚Ä¢ Sales tax: {isPremium ? '4%' : '8%'} + 2.5% setup fee = {isPremium ? '6.5%' : '10.5%'} total</li>
                                        <li>‚Ä¢ üü¢ = Fresh orders (&lt;15 min) | üü° = Moderate (15-30 min) | üî¥ = Stale (&gt;30 min)</li>
                                        <li>‚Ä¢ Always verify orders in-game before buying - they may be consumed</li>
                                        <li>‚Ä¢ Transport from Royal Cities adds risk but higher profits</li>
                                        <li>‚Ä¢ High-tier items (.3/.4) may take weeks to sell if flip fails</li>
                                    </ul>
                                </Card>
                            )}
                        </div>
                    </div>
                    </div >
                );
}
